[user]
  name = Shamil Fattakhov
  email = voidproxy@gmail.com

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[color]
  ui = true

[alias]
  s = status -sb
  b = branch
  c = commit
  ca = commit --amend
  co = checkout
  l = log
  lf = log --pretty=fuller
  h = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  ll = log --date=relative --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%an, %ad)%Creset'
  rc = rebase --continue
  a = add
  d = diff
  dc = diff --cached
  up = "!git remote update -p; git merge --ff-only @{u}"
  puff = push --force-with-lease
  chp = cherry-pick

[branch]
  autosetuprebase = always

[pull]
  ff = only

[push]
  default = current

[rebase]
  autosquash = true

[diff]
  submodule = log

[merge]
  tool = vimdiff
